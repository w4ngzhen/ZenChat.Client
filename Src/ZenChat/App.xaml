<Application x:Class="ZenChat.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:zenChat="clr-namespace:ZenChat"
             xmlns:converters="clr-namespace:ZenChat.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Base/Colors/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Base/Colors/Brushes.xaml"/>
                <ResourceDictionary Source="Styles/Base/Converters.xaml"/>
                <ResourceDictionary Source="Styles/Base/Fonts/Fonts.xaml"/>
                <ResourceDictionary Source="Styles/ControlStyle.xaml" />
                <ResourceDictionary>
                    <zenChat:ZenChatBootstrapper x:Key="Bootstrapper"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
